<div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">编辑商品</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" id="product-edit-from" method="post" enctype="multipart/form-data">
              <div class="box-body">
                <div class="form-group">
                  <label for="productImg" class="col-sm-2 control-label">商品图片</label>

                  <div class="col-sm-10">
                    <img src="http://localhost:3000/upload/{{productImg}}" alt="" height="70px" width="70px">
                    <input type="file" name="productImg"class="form-control" id="productImg" placeholder="请选择小于1M的图片">
                  </div>
                </div>
                <div class="form-group">
                  <label for="productName" class="col-sm-2 control-label">商品名称</label>

                  <div class="col-sm-10">
                    <input type="text" name="productName" class="form-control" id="productName" required="required" placeholder="请输入商品名称" value="{{productName}}">
                  </div>
                </div>
                <div class="form-group">
                  <label for="productType"  class="col-sm-2 control-label">商品类型</label>

                  <div class="col-sm-10">
                    <input type="text" name="productType" class="form-control" id="productType"  required="required" placeholder="请输入商品类型" value="{{productType}}">
                  </div>
                </div>
                <div class="form-group">
                  <label for="productPrice" class="col-sm-2 control-label">商品价格</label>

                  <div class="col-sm-10">
                    <input type="text" name="productPrice"  class="form-control" id="productPrice"  required="required" placeholder="请输入商品价格" value="{{productPrice}}">
                  </div>
                </div>
                <div class="form-group">
                  <label for="productNumber" class="col-sm-2 control-label">商品库存</label>

                  <div class="col-sm-10">
                    <input type="text" name="productNumber" class="form-control" id="productNumber" required="required" placeholder="请输入商品库存数量" value="{{productNumber}}">
                  </div>
                </div>               
              </div>             
            </form>
             <!-- /.box-body -->
              <div class="box-footer">
                <button id="product-edit-close" class="btn btn-default">返回</button>
                <button  id ="product-edit" class="btn btn-info pull-right">提交编辑</button>
              </div>
              <!-- /.box-footer -->
          </div>